<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/root">

	<LinearLayout
		style="@style/input">

		<TextView
			style="@style/input_text"
			android:text="@string/addrOffset"/>

		<EditText
			style="@style/input_edit"
			android:id="@+id/input_addrOffset"
			android:text="+0"/>

	</LinearLayout>

	<LinearLayout
		style="@style/input">

		<TextView
			style="@style/input_text"
			android:text="@string/valueOffset"/>

		<EditText
			style="@style/input_edit"
			android:id="@+id/input_valueOffset"
			android:text="+0"/>

	</LinearLayout>

</LinearLayout>

