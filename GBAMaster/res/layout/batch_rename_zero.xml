<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/root">

	<LinearLayout
		style="@style/input">

		<TextView
			style="@style/input_text"
			android:text="@string/numPosition"/>

		<Spinner
			android:entries="@array/position"
			style="@style/input_edit"
			android:id="@+id/position"/>

	</LinearLayout>

	<LinearLayout
		style="@style/input">

		<TextView
			style="@style/input_text"
			android:text="@string/minLength"/>

		<EditText
			style="@style/input_edit"
			android:id="@+id/input_minLength"
			android:inputType="numberDecimal"
			android:text="3"/>

	</LinearLayout>

	<include
		layout="@layout/batch_rename_frame"/>

</LinearLayout>

