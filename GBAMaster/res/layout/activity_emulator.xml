<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/full"
	android:fillViewport="true">

	<LinearLayout
		style="@style/dialog_root">

		<LinearLayout
			style="@style/verticalBar"
			android:padding="5dp"
			android:background="?shape_bg">

			<LinearLayout
				style="@style/bar">

				<TextView
					android:id="@+id/gameName"
					style="@style/line_item"
					android:textColor="@color/highlight"
					android:textAppearance="?android:attr/textAppearanceLarge"/>

				<TextView
					android:id="@+id/gameSize"
					style="@style/wrap"
					android:layout_gravity="bottom"/>

			</LinearLayout>

			<TextView
				android:id="@+id/gamePath"
				style="@style/fill"/>

		</LinearLayout>

		<RadioGroup
			android:id="@+id/emulators"
			style="@style/RadioSwitch"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp">

			<RadioButton
				style="@style/switch_radio"
				android:text="@string/gameboid"
				android:id="@+id/gameboid"/>

			<RadioButton
				style="@style/switch_radio"
				android:text="@string/myboy"
				android:id="@+id/myboy"/>

		</RadioGroup>

		<ImageView
			style="?imgStyle"
			android:id="@+id/ss0Img"
			android:layout_width="fill_parent"
			android:layout_height="200dp"/>

		<TextView
			android:id="@+id/ss0Time"
			android:hint="@string/noSS0"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textStyle="italic"
			android:gravity="center"
			style="@style/fill"/>

		<RadioGroup
			android:id="@+id/cheatTypeView"
			style="@style/RadioSwitch"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp">

			<RadioButton
				style="@style/switch_radio"
				android:text="@string/cht"
				android:id="@+id/chtRadio"/>

			<RadioButton
				style="@style/switch_radio"
				android:text="@string/cot"
				android:id="@+id/cotRadio"/>

		</RadioGroup>

		<LinearLayout
			style="@style/bar"
			android:id="@+id/chtBar">

			<Button
				style="@style/fill"
				android:id="@+id/btn_createCht"
				android:text="@string/createCht"/>

			<LinearLayout
				style="@style/bar"
				android:id="@+id/chtBar2">

				<Button
					style="@style/line_item_center"
					android:id="@+id/btn_cht_edit"
					android:text="@string/edit"/>

				<Button
					style="@style/wrap"
					android:id="@+id/btn_cht_option"
					android:text="@string/option"/>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			style="@style/bar"
			android:id="@+id/cotBar">

			<TextView
				style="@style/input_edit"
				android:id="@+id/cotNameView"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:hint="@string/noCot"/>
			
			<Button
				style="@style/wrap"
				android:id="@+id/btn_preview"
				android:text="@string/preview"/>

			<Button
				style="@style/wrap"
				android:id="@+id/btn_browser"
				android:text="@string/browser"/>

		</LinearLayout>

	</LinearLayout>

</ScrollView>

